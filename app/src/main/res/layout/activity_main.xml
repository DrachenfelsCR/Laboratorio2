<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/marvelbackground">

    <Button
            android:text="Avengers"
            android:layout_width="113dp"
            android:layout_height="57dp" android:id="@+id/buttonAvengers"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            app:layout_constraintVertical_bias="0.62" android:backgroundTint="#C53636"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATOS DE MARVEL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.383" android:textColor="#FFFFFF" android:fontFamily="serif"
            android:textSize="34sp" android:textStyle="bold" android:id="@+id/textView"/>
    <Button
            android:text="X-MEN"
            android:layout_width="91dp"
            android:layout_height="58dp" android:id="@+id/buttonXmen"
            android:backgroundTint="#CA3934"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonAvengers" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.784" app:layout_constraintVertical_bias="0.794"
    />

</androidx.constraintlayout.widget.ConstraintLayout>