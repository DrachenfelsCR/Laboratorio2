<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AvengersActivity"
        android:background="@drawable/avengers">
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_margin="20dp"
                                       app:cardCornerRadius="20dp"
                                       app:cardElevation="10dp"
                                       app:contentPadding="20dp"
                                       app:cardBackgroundColor="#B0150D0D"
                                       android:layout_gravity="bottom"
    >
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Los Vengadores"
                      android:textSize="35sp"
                      android:textStyle="bold"
                      android:textColor="@color/white"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/avengersText"
                      android:textSize="16sp"
                      android:textStyle="normal"
                      android:textColor="@color/white"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
            android:text="Volver atras"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#F5000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonAvengersVolver"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" app:srcCompat="@drawable/avengerslogo" android:id="@+id/imageView2"/>

</FrameLayout>